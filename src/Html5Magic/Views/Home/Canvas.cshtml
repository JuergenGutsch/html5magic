@{
    ViewBag.Title = "Canvas";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-6">
        <canvas height="500" width="500" id="defaultCanvas"></canvas>
        <script>
            $(function() {
                var canvas = $('#defaultCanvas');
                var context = canvas[0].getContext('2d');

                context.strokeStyle = '#F00';
                context.moveTo(250, 250);
                context.lineTo(450, 450);
                context.stroke();

                context.fillStyle = '#0F0';
                context.fillRect(50, 50, 250, 250);

                context.strokeStyle = '#00F';
                context.beginPath();
                context.arc(350, 350, 100, 0, Math.PI * 2);
                context.closePath();
                context.stroke();

                var rnd = Math.random() * 500;
                context.strokeStyle = '#00F';
                context.strokeText(rnd.toFixed(0).toString(), 50, 50);
                context.stroke();
            });
        </script>
    </div>
    <div class="col-md-6">
        <canvas height="500" width="500" id="defaultCanvasRand"></canvas>
        <script>
            $(function () {
                var canvas = $('#defaultCanvasRand');
                var context = canvas[0].getContext('2d');

                for (var i = 0; i < 50; i++) {
                    var x = Math.random() * 500;
                    var y = Math.random() * 500;

                    var r = Math.random() * 255;
                    var g = Math.random() * 255;
                    var b = Math.random() * 255;

                    var strokeStyle = 'rgb(' + r.toFixed(0) + ',' + g.toFixed(0) + ',' + b.toFixed(0) + ')';

                    context.strokeStyle = strokeStyle;
                    context.beginPath();
                    context.arc(x, y, r, 0, Math.PI * 2);
                    context.closePath();
                    context.stroke();
                }
            });
        </script>
    </div>
</div>
